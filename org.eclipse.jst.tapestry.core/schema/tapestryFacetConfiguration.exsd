         <attribute name="name" type="string">
            <annotation>
               <documentation>
                  
               </documentation>
               <appInfo>
                  <meta.attribute translatable="true"/>
               </appInfo>
            </annotation>
         </attribute>
      </complexType>
   </element>

   <element name="tapestryFacetConfiguration">
      <complexType>
         <attribute name="disabled" type="boolean" use="required">
            <annotation>
               <documentation>
                  if set true, the Tapestry Facet configuration UI will not display, and the configuration will not execute for either INSTALL or UNINSTALL operations.   This does not affect the library provider in any way.
               </documentation>
            </annotation>
         </attribute>
      </complexType>
   </element>

